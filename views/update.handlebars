<h3>Change Role Name/Salary</h3>
<form id="role_form" action="update/update_role" method="POST">
    <span>Role (Choose one):</span><br>
    <select id="update_role" name="role" class="roles" required>
        {{#each role}}
        <option value="{{id}}">{{name}} [${{salary}}/month]</option>
        {{/each}}
    </select><br>
    <span>New role name:</span><br>
    <input type="text" id="new_role_name" name="name" required><br>
    <span>New salary:</span><br>
    <input type="number" id="new_role_salary" name="name" min="0" required><br>
    <input type="submit" value="Update Role">
</form>

