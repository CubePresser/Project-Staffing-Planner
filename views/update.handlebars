<h3>Change Project Name</h3>
<form id="project_form" action="update/update_project" method="POST">
    <span>Project (Choose one):</span><br>
    <select id="update_project" name="project" class="projects" required>
        {{#each project}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <span>New project name:</span><br>
    <input type="text" id="new_project_name" name="name" required><br>
    <input type="submit" value="Update Project">
</form>

