<h3>Add Project</h3>
<form id="project_form" action="add/add_project" method="POST">
    Project Name: <br>
    <input type="text" name="name" id="project_name" required><br>
    <input type="submit" value="Add Project">
</form>

<h3>Add Team</h3>
<form id="team_form" action="add/add_team" method="POST">
    Team Name: <br>
    <input type="text" name="name" id="team_name" required><br>
    <input type="submit" value="Add Team">
</form>

<h3>Add Role</h3>
<form id="role_form" action="add/add_role" method="POST">
    Role Name: <br> 
    <input type="text" name="name" id="role_name" required><br>
    Salary ($/Month): <br>
    <input type="number" name="salary" id="salary" min="0" required><br>
    Link to companies (optional): <br>
    <select id="role_companies" name="company" class="companies" multiple> <!--These are added whenever the user adds one to the database-->
        {{#each company}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Add Role">
</form>

<h3>Add a Role-Company Relationship</h3>
<form id="role-company_form" action="add/add_role-company" method="POST">
    <span>Role (Choose one):</span><br>
    <select id="add_role-company_role_id" name="role" class="roles" required>
        {{#each role}}
        <option value="{{id}}">{{name}} [${{salary}}/month]</option>
        {{/each}}
    </select><br>
    <span>Company (Choose one):</span><br>
    <select id="add_role-company_company_id" name="company" class="companies" required>
        {{#each company}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Add Relation">
</form>

