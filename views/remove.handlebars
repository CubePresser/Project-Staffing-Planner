<h3>Remove Project</h3>
<form id="project_form" action="remove/remove_project" method="POST">
    <span>Project (Choose one):</span><br>
    <select id="remove_project" name="project" class="projects" required>
        {{#each project}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Remove Project">
</form>

